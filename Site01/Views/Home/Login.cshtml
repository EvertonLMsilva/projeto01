@{
    Layout = "_Layout";
}
@{
    ViewBag.Title = "Login";
}
<form method="post" action="/home/login">
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" name="email" value="" class="form-control" id="email" placeholder="Digite seu e-mail:">
        @Html.ValidationMessage("email")

    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="text" name="senha" class="form-control" value="" id="senha" placeholder="Digite sua senha:">
        @Html.ValidationMessage("senha")
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
@ViewBag.Mensagem
