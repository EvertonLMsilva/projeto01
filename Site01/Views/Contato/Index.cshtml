@{
    Layout = "_Layout";   
}
@{ 
    ViewBag.Title = "Contatos";
}
<form method="post" action="/contato/recebercontato">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" name="nome" value="@ViewBag.Contato.Nome" class="form-control" id="nome" placeholder="Digite seu nome:">
        @Html.ValidationMessage("nome")

    </div>
    <div class="form-group">
        <label for="nome">email</label>
        <input type="text" name="email" class="form-control" value="@ViewBag.Contato.Email" id="email" placeholder="Digite seu Email:">
        @Html.ValidationMessage("email")
    </div>
    <div class="form-group">
        <label for="assunto">Assunto</label>
        <input type="text" name="assunto" class="form-control" value="@ViewBag.Contato.Assunto" id="assunto" placeholder="Digite o assunto:">
        @Html.ValidationMessage("assunto")
    </div>
    <div class="form-group">
        <label for="mensagem">Mensagem</label>
        <textarea name="mensagem" class="form-control" id="mensagem">@ViewBag.Contato.Mensagem</textarea>
        @Html.ValidationMessage("mensagem")
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
@ViewBag.Mensagem
